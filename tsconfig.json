{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "sourceMap": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "files": ["src/type.d.ts"],
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
